<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="CustomTabView">
    <attr name="textSize" format="dimension" />
  </declare-styleable>

  <attr name="searchViewHeight" format="reference" />
  
  <declare-styleable name="VsLineView">
    <attr name="leftColor" format="color"/>
    <attr name="rightColor" format="color"/>

    <attr name="lineHeight" format="dimension" />
    
    <attr name="delimiterColor" format="color" />

    <attr name="primaryPercentage" format="float" />
  </declare-styleable>

  <dimen name="defaultLineHeight">6dp</dimen>
  <color name="defaultLeftColor">@color/grey</color>
  <color name="defaultRightColor">@color/uikit_lightRed</color>
  <color name="defaultDelimiterColor">@color/black</color>

  <dimen name="delimiterExtraSpace">4dp</dimen>
  <dimen name="delimiterWidth">2dp</dimen>

</resources>