<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/announcementCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="@dimen/x2"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="@dimen/x2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/WhiteTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_circled_bg"
            android:paddingLeft="@dimen/x2"
            android:paddingTop="@dimen/x2"
            android:paddingRight="@dimen/x2"
            android:paddingBottom="@dimen/x1"
            android:text="@string/activity_sora_announcement" />

        <TextView
            android:id="@+id/announcementTv"
            style="@style/LightBlackTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x2"
            android:paddingTop="@dimen/x1"
            android:paddingRight="@dimen/x2"
            android:paddingBottom="@dimen/x2"
            tools:text="Starting today backer will have more tools to suppport their favourite projects." />

    </LinearLayout>

</androidx.cardview.widget.CardView>