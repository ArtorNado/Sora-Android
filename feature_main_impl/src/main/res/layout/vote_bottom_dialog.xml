<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/x1"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/x3">
        <TextView
            android:id="@+id/dialog_title"
            style="@style/DialogTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_many_votes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x1"
            android:padding="@dimen/x1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/dialog_title"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_close"/>
        <ImageView
            android:id="@+id/icon_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            app:srcCompat="@drawable/icon_vote_big"
            />
        <EditText
            android:id="@+id/votes_count"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x2"
            android:padding="0dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="10"
            android:minWidth="250dp"
            android:textColor="@color/lightBlack"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_vote"
            app:layout_constraintStart_toEndOf="@+id/icon_vote"
            app:layout_constraintTop_toTopOf="@+id/icon_vote"/>
        <SeekBar
            android:id="@+id/votes_seekbar"
            style="@style/ThickSeekBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/x3"
            android:layout_marginTop="@dimen/x2"
            android:max="200"
            android:min="1"
            android:progressBackgroundTint="@color/seekbarColor"
            android:progressTint="@color/lightRed"
            android:thumb="@drawable/thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_vote"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_vote"
            style="@style/FilledButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/x2"
            android:text="@string/vote"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/votes_seekbar"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/x2"
            android:layout_marginStart="8dp"
            android:text="@string/cancel"
            app:layout_constraintEnd_toStartOf="@id/btn_keyboard"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_vote"
            app:layout_constraintTop_toBottomOf="@+id/votes_seekbar"/>

        <ImageView
            android:id="@+id/btn_keyboard"
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/x2"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="@dimen/x2"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_open_keyboard"
            app:layout_constraintBottom_toBottomOf="@+id/btn_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@+id/votes_seekbar"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>